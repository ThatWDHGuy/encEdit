    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc Gtk",
            "type": "shell",
            "command": "gcc `pkg-config --cflags gtk+-3.0` -o Test Test++.cpp `pkg-config --libs gtk+-3.0`",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./Test",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}